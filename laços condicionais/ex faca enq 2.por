programa
{
	
	funcao inicio()
	{
		inteiro num, soma=0,x=0

		escreva("\nDigite um numero: ")
		leia(num)
		faca{
			x++
			soma = soma + x
			}
			enquanto (x<num)
			escreva("\nA soma é: ",soma)
		
	}
}
